let timeSpent = {};
let limit = 300; // 300 5 min : sec

chrome.tabs.onActivated.addListener(activeInfo => {
  const tabId = activeInfo.tabId;
  const site = timeSpent[tabId] || { site: "", time: 0 };

  chrome.tabs.get(tabId, tab => {
    const url = new URL(tab.url).hostname;
    if (!site.site) site.site = url;

    // create alarm
    chrome.alarms.create("trackTime", { periodInMinutes: 0.016 });
  });
});

chrome.alarms.onAlarm.addListener(alarm => {
  if (alarm.name === "trackTime") {
    const activeTab = timeSpent[activeTabId];
    if (activeTab) {
      activeTab.time++;
      if (activeTab.time >= limit) {
        alert(`You've spent too much time on ${activeTab.site}`);
        activeTab.time = 0;
      }
    }
  }
});
